{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "preserveConstEnums": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "types"]
  },

  "include": ["src/**/*", "types", "tests"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}